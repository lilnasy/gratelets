{
    "name": "root",
    "private": "true",
    "scripts": {
        "check": "pnpm check:all",
        "check:all": "pnpm --filter ./packages/* check",
        "check:changed": "pnpm --filter ./packages/*[origin/main] check",
        "test": "pnpm test:all",
        "test:all": "pnpm --filter ./packages/* test",
        "test:changed": "pnpm --filter ./packages/*[origin/main] test"
    },
    "workspaces": [ "packages/*" ],
    "packageManager": "pnpm@8.6.12",
    "devDependencies": {
        "astro": "3",
        "@changesets/cli": "^2.26.2",
        "@changesets/changelog-github": "^0.4.8"
    }
}