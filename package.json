{
    "name": "root",
    "private": "true",
    "scripts": {
        "check"  : "pnpm run all check",
        "test"   : "pnpm run all test",
        "all"    : "pnpm run --workspace-concurrency 1 --bail false --filter \"./packages/*\"",
        "changed": "pnpm run --workspace-concurrency 1 --bail false --filter \"./packages/*[origin/main]\""
    },
    "workspaces": [ "packages/*" ],
    "packageManager": "pnpm@8.6.12",
    "devDependencies": {
        "astro": "3",
        "@changesets/cli": "^2.26.2",
        "@changesets/changelog-github": "^0.4.8"
    }
}