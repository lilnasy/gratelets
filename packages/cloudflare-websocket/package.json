{
    "name": "astro-cloudflare-websocket",
    "type": "module",
    "description": "Use WebSockets in your Astro SSR Apps and run it on Cloudflare Workers.",
    "version": "1.1.0",
    "license": "MIT",
    "author": {
        "name": "lilnasy",
        "email": "hi@arsh.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lilnasy/gratelets.git",
        "directory": "packages/cloudflare-websocket"
    },
    "homepage": "https://github.com/lilnasy/gratelets/tree/main/packages/cloudflare-websocket",
    "keywords": [
        "withastro",
        "astro",
        "astro-integration",
        "astro-adapter",
        "cloudflare",
        "workers",
        "websocket"
    ],
    "files": [
        "withastro/astro/packages/integrations/cloudflare/src"
    ],
    "exports": {
        ".": "./withastro/astro/packages/integrations/cloudflare/src/index.ts",
        "./handler": "./withastro/astro/packages/integrations/integrations/cloudflare/src/utils/handler.ts",
        "./websocket": {
            "development": "./withastro/astro/packages/integrations/cloudflare/src/websocket/dev-websocket.ts",
            "production": "./withastro/astro/packages/integrations/cloudflare/src/websocket/cloudflare-websocket.ts"
        }
    },
    "dependencies": {
        "@astrojs/internal-helpers": "0.6.1",
        "@astrojs/underscore-redirects": "^1.0.0",
        "@cloudflare/workers-types": "^4.20250507.0",
        "@types/ws": "^8.18.1",
        "tinyglobby": "^0.2.13",
        "vite": "^6.3.5",
        "wrangler": "^4.14.1",
        "ws": "^8.18.3"
    },
    "peerDependencies": {
        "astro": "^5.0.0"
    },
    "devDependencies": {
        "rollup": "^4.40.2"
    },
    "scripts": {
        "clone": "git submodule update --init .",
        "create_patches": "cd withastro/astro && git format-patch tags/@astrojs/cloudflare@12.6.3 -o ../..",
        "load_patches": "git submodule update --init . && cd withastro/astro && git am ../../*.patch",
        "delete_all_changes_and_unload_patches": "cd withastro/astro && git reset --hard tags/@astrojs/cloudflare@12.6.3",
        "delete_all_changes_and_reload_patches": "cd withastro/astro && git reset --hard tags/@astrojs/cloudflare@12.6.3 && git am ../../*.patch",
        "test": "pnpm -w test cloudflare-websocket.test.ts"
    }
}